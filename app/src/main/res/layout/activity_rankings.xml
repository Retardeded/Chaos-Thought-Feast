<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.knowledge.testapp.activity.RankingsActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/statsbackground"
    android:scaleType="fitXY">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/top_users_in_each_mode"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:id="@+id/tv_top_users"
        />


    <!-- Seperation Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        />

    <!-- User-Specific World Records Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_your_likings"
            android:layout_gravity="center"
            android:onClick="showTopUsersDialog_FIND_YOUR_LIKINGS" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/liking_spectrum_journey"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:onClick="showUserTopUsersDialog_LIKING_SPECTRUM_JOURNEY" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/anyfin_can_happen"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:onClick="showUserTopUsersDialog_ANYFIN_CAN_HAPPEN" />

    </LinearLayout>

    <!-- Seperation Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:layout_marginTop="16dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/your_personal_bests"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:id="@+id/tv_game_mode_title"
        />


    <!-- Seperation Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        />

    <!-- User-Specific World Records Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_your_likings_records"
            android:layout_gravity="center"
            android:onClick="showUserWorldRecordsDialog_FIND_YOUR_LIKINGS" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/liking_spectrum_journey_records"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:onClick="showUserWorldRecordsDialog_LIKING_SPECTRUM_JOURNEY" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/anyfin_can_happen_records"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:onClick="showUserWorldRecordsDialog_ANYFIN_CAN_HAPPEN" />

    </LinearLayout>

    <!-- Seperation Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:layout_marginTop="16dp" />

    <!-- Space to push other elements to the top -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Main Menu and Profile Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_menu"
            android:textColor="@color/white"
            android:layout_marginStart="16dp"
            android:onClick="goToMainMenu" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile"
            android:textColor="@color/white"
            android:layout_marginStart="16dp"
            android:onClick="goToProfile" />

    </LinearLayout>

</LinearLayout>