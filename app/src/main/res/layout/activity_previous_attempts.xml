<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    tools:context="com.knowledge.testapp.activity.PreviousAttempts">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_show_top_users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Top Users"
            android:layout_below="@id/btn_show_winning_paths"
            android:layout_centerHorizontal="true"
            android:onClick="showTopUsersDialog" />

        <Button
            android:id="@+id/btn_show_winning_paths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Winning Paths"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:onClick="showWinningPathsDialog" />

        <Button
            android:id="@+id/btn_show_losing_paths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Losing Paths"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:onClick="showLosingPathsDialog" />

        <Button
            android:id="@+id/btn_try_again"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/design_default_color_on_primary"
            android:text="Try Again"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_clear_paths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear your local data"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:onClick="clearPaths" />

    </LinearLayout>
</LinearLayout>