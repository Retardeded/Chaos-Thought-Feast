<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/forestpathofknowledge">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mindless_thought_cake"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <Button
            android:id="@+id/btn_find_likings_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_your_likings"
            android:textColor="@color/white"
            android:onClick="goToFindYourLikings" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <Button
            android:id="@+id/btn_likings_spectrum_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/liking_spectrum_journey"
            android:textColor="@color/white"
            android:onClick="goToLikingSpectrumJourney" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <Button
            android:id="@+id/btn_any_happening_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/anyfin_can_happen"
            android:textColor="@color/white"
            android:onClick="goToAnyfinCanHappen" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <Button
            android:id="@+id/btn_p_v_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pvp"
            android:textColor="@color/white"
            android:onClick="goToPvP"
            android:visibility="invisible"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="128dp">

        <Button
            android:id="@+id/btn_profile_main_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile"
            android:textColor="@color/white"
            android:layout_marginStart="16dp"
            android:onClick="goToProfileActivity" />

        <Button
            android:id="@+id/btn_rankings_main_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rankings"
            android:textColor="@color/white"
            android:layout_marginStart="16dp"
            android:onClick="goToRankingsActivity" />

    </LinearLayout>

</LinearLayout>