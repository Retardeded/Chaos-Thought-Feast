<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn_rankings_main_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rankings"
            android:textColor="@color/white"
            android:layout_marginStart="16dp"
            android:onClick="goToRankingsActivity" />

        <Button
            android:id="@+id/btn_profile_main_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@color/white"
            android:layout_marginStart="16dp"
            android:onClick="goToProfileActivity" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn_find_likings_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find your Likings"
            android:textColor="@color/white"
            android:layout_marginStart="16dp"
            android:onClick="goToFindYourLikings" />

        <Button
            android:id="@+id/btn_likings_spectrum_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liking Spectrum Journey"
            android:textColor="@color/white"
            android:layout_marginStart="16dp"
            android:onClick="goToLikingSpectrumJourney" />

        <Button
            android:id="@+id/btn_any_happening_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anyfin Can Happen"
            android:textColor="@color/white"
            android:layout_marginStart="16dp"
            android:onClick="goToFindYourLikings" />

    </LinearLayout>

</LinearLayout>